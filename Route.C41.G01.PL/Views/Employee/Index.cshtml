@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employees";
}

<h1>All Employees</h1>

<br />
<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(E=>E.Name)</td>
                <td>@Html.DisplayNameFor(E => E.Age)</td>
              @*   <td>@Html.DisplayNameFor(E => E.Email)</td> *@
                <td>@Html.DisplayNameFor(E => E.Salary)</td>
                <td>@Html.DisplayNameFor(E => E.IsActive)</td>
                @* <td>@Html.DisplayNameFor(E => E.PhoneName)</td> *@
                <td>@Html.DisplayNameFor(E => E.Gender)</td>
              @*   <td>@Html.DisplayNameFor(E => E.EmployeeType)</td> *@
               @*  <td>@Html.DisplayNameFor(E => E.HiringDate)</td> *@
                <td>@Html.DisplayNameFor(E => E.Email)</td>
                
               <td>Details</td>
               <td>Update</td>
               <td>Delete</td>
            </tr>
        </thead>
<tbody>
            @foreach(var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>@Employee.Age</td>
                    <td>@Html.DisplayFor(M=>Employee.Salary)</td>
                    <td>@Html.DisplayFor(M=>Employee.IsActive)</td>
                    <td>@Employee.Gender</td>
                    <td>@Html.DisplayFor(M=>Employee.Email)</td>
                    
                    <td><a asp-controller="Employee" asp-action="Details" asp-route-id="@Employee.Id" class="btn btn-warning"><i class="fas fa-eye"></i> Details</a></td>
                    <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@Employee.Id" class="btn btn-success"><i class="fas fa-edit"></i> Edit</a></td>
                    <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h3>there is No Employees :(</h3>
    </div>
}