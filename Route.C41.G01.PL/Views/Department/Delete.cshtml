@model Department
@{
    ViewData["Title"] = "Delete Department";
}

<h1>Are you Sure to Delete This Department</h1>

<form asp-action="Delete" method="post">
    <partial name="ParialViews/DetailsDeleteDepartmentPartial" />

    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-controller="Department" asp-action="Index" class="btn btn-success">Cancel</a>
</form>

@section ValidationScriptSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}